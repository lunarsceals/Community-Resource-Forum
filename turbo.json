{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "MYSQL_PASSWORD",
    "MYSQL_PORT",
    "MYSQL_DATABASE",
    "MYSQL_USER",
    "MYSQL_HOST",
    "AUTH_REDIRECT_PATH",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET"
  ],
  "tasks": {
    "db:generate": {
      "dependsOn": [],
      "outputs": ["migrations/ddl.sql"]
    },
    "db:migrate": {
      "dependsOn": ["db:generate"],
      "interactive": true,
      "cache": false
    },
    "docker:ready": {
      "cache": false
    },
    "build": {
      "dependsOn": ["db:generate"],
      "outputs": [".next/**"]
    },
    "Next.js": {
      "dependsOn": ["db:migrate","docker:ready"],
      "persistent": true,
      "cache": false
    },
    "Drizzle Studio": {
      "dependsOn": ["docker:ready"],
      "persistent": true,
      "cache": false
    },
    "lint:fix": {
      "dependsOn": []
    },
    "typecheck": {
      "dependsOn": []
    }
  },
  "ui": "tui"
}
